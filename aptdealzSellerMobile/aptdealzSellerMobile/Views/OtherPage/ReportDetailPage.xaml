<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="aptdealzSellerMobile.Views.OtherPage.ReportDetailPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ext="clr-namespace:aptdealzSellerMobile.Extention"
    xmlns:iOS="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
    iOS:Page.UseSafeArea="True"
    BackgroundColor="{StaticResource White}"
    NavigationPage.HasNavigationBar="False">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--  Header(NavigationBar)  -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80" />
                </Grid.ColumnDefinitions>
                <Image
                    Grid.Column="0"
                    Margin="20,0,0,0"
                    HeightRequest="30"
                    HorizontalOptions="StartAndExpand"
                    Source="IconMenu.png"
                    VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgMenu_Tapped" />
                    </Image.GestureRecognizers>
                </Image>

                <Image
                    Grid.Column="1"
                    Margin="0"
                    Aspect="AspectFill"
                    HeightRequest="45"
                    HorizontalOptions="CenterAndExpand"
                    Source="iconHeaderLogo.png"
                    VerticalOptions="CenterAndExpand"
                    WidthRequest="45" />

                <StackLayout
                    Grid.Column="2"
                    Margin="0,0,20,0"
                    HorizontalOptions="EndAndExpand"
                    Orientation="Horizontal">
                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconNotification.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgNotification_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <Image
                        Margin="0"
                        HeightRequest="30"
                        HorizontalOptions="CenterAndExpand"
                        Source="iconQuestion.png"
                        VerticalOptions="CenterAndExpand">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgQuestion_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>
                </StackLayout>
            </Grid>

            <BoxView
                Grid.Row="1"
                BackgroundColor="{StaticResource LightGray}"
                HeightRequest="1"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="EndAndExpand" />

            <Grid Grid.Row="2" Margin="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--  Back Arrow  -->
                <Grid
                    Grid.Row="0"
                    Margin="20,0"
                    ColumnDefinitions="Auto,*,Auto"
                    HorizontalOptions="FillAndExpand">
                    <Image
                        Margin="0"
                        Aspect="AspectFit"
                        HeightRequest="30"
                        HorizontalOptions="StartAndExpand"
                        Source="iconBackArrow.png"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="30">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgBack_Tapped" />
                        </Image.GestureRecognizers>
                    </Image>

                    <!--  Report Detail  -->
                    <Label
                        x:Name="lblReq"
                        Grid.Column="1"
                        Margin="5,0,0,0"
                        FontFamily="Poppins SemiBold"
                        FontSize="20"
                        HorizontalOptions="StartAndExpand"
                        Text="Report Detail"
                        TextColor="{StaticResource Black}"
                        VerticalOptions="CenterAndExpand" />

                    <!--  Sort by  -->
                    <ext:CustomShadowFrame
                        Grid.Column="2"
                        Margin="20,0,0,0"
                        Padding="0"
                        BorderColor="{StaticResource LightGray}"
                        CornerRadius="5"
                        HasShadow="False"
                        HorizontalOptions="EndAndExpand"
                        WidthRequest="100">
                        <Grid
                            Margin="5"
                            ColumnDefinitions="Auto,*"
                            ColumnSpacing="0"
                            VerticalOptions="CenterAndExpand">
                            <Image
                                Grid.Column="0"
                                Margin="0"
                                Aspect="AspectFit"
                                HeightRequest="20"
                                HorizontalOptions="CenterAndExpand"
                                Source="iconSort.png"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                Padding="0"
                                FontFamily="Poppins"
                                FontSize="13"
                                HorizontalOptions="StartAndExpand"
                                Text="Sort by"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                        <ext:CustomShadowFrame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmSortBy_Tapped" />
                        </ext:CustomShadowFrame.GestureRecognizers>
                    </ext:CustomShadowFrame>
                </Grid>

                <Grid Grid.Row="1" Margin="20,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--  Status By  -->
                    <ext:CustomShadowFrame
                        Grid.Column="2"
                        Margin="0,10"
                        Padding="0"
                        BorderColor="{StaticResource LightGray}"
                        CornerRadius="5"
                        HasShadow="False"
                        HorizontalOptions="EndAndExpand"
                        WidthRequest="100">
                        <Grid
                            Margin="5"
                            ColumnDefinitions="Auto,*"
                            ColumnSpacing="0">
                            <Image
                                Grid.Column="0"
                                Margin="0"
                                Aspect="AspectFit"
                                HeightRequest="20"
                                HorizontalOptions="CenterAndExpand"
                                Source="iconStatus.png"
                                VerticalOptions="CenterAndExpand" />

                            <Label
                                Grid.Column="1"
                                Margin="10,0"
                                FontFamily="Poppins"
                                FontSize="13"
                                HorizontalOptions="CenterAndExpand"
                                Text="Status"
                                TextColor="{StaticResource Black}"
                                VerticalOptions="CenterAndExpand" />
                        </Grid>
                        <ext:CustomShadowFrame.GestureRecognizers>
                            <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="FrmStatus_Tapped" />
                        </ext:CustomShadowFrame.GestureRecognizers>
                    </ext:CustomShadowFrame>
                </Grid>

                <ListView
                    x:Name="lstReportDetails"
                    Grid.Row="2"
                    HasUnevenRows="True"
                    HorizontalOptions="FillAndExpand"
                    SelectionMode="None"
                    SeparatorVisibility="None"
                    VerticalOptions="FillAndExpand">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <Grid
                                    Margin="0"
                                    Padding="0"
                                    RowSpacing="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>

                                    <Grid
                                        Grid.Row="0"
                                        Margin="20,10"
                                        Padding="0"
                                        RowSpacing="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <Grid
                                            Grid.Column="0"
                                            Margin="0"
                                            RowSpacing="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0" ColumnSpacing="0">
                                                <!--  InvoiceId  -->
                                                <Label
                                                    FontFamily="Poppins SemiBold"
                                                    FontSize="{OnPlatform Android=14,
                                                                          iOS=16}"
                                                    Text="{Binding InvoiceId}"
                                                    TextColor="{StaticResource Black}" />

                                                <!--  Status  -->
                                                <Label
                                                    Margin="0"
                                                    Padding="0"
                                                    FontFamily="Poppins Medium"
                                                    FontSize="{OnPlatform Android=14,
                                                                          iOS=16}"
                                                    HorizontalOptions="EndAndExpand"
                                                    Text="{Binding Status}"
                                                    TextColor="{Binding StatusColor}"
                                                    VerticalOptions="CenterAndExpand"
                                                    VerticalTextAlignment="Center" />

                                            </Grid>


                                            <Grid
                                                Grid.Row="1"
                                                Margin="0"
                                                Padding="0">
                                                <!--  Order Amount  -->
                                                <Label
                                                    Padding="0"
                                                    FontFamily="Poppins Medium"
                                                    FontSize="{OnPlatform Android=14,
                                                                          iOS=16}"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="Order Amount:"
                                                    TextColor="{StaticResource Black}">
                                                    <Label.Margin>
                                                        <OnPlatform x:TypeArguments="Thickness">
                                                            <On Platform="Android" Value="0" />
                                                            <On Platform="iOS" Value="0,10,0,0" />
                                                        </OnPlatform>
                                                    </Label.Margin>
                                                </Label>

                                                <!--  Amount  -->
                                                <Label
                                                    Grid.Column="1"
                                                    Padding="0"
                                                    FontFamily="Poppins Medium"
                                                    FontSize="{OnPlatform Android=14,
                                                                          iOS=16}"
                                                    HorizontalOptions="StartAndExpand"
                                                    Text="{Binding Amount, StringFormat='Rs {0}'}"
                                                    TextColor="{StaticResource Black}">
                                                    <Label.Margin>
                                                        <OnPlatform x:TypeArguments="Thickness">
                                                            <On Platform="Android" Value="0" />
                                                            <On Platform="iOS" Value="0,10,0,0" />
                                                        </OnPlatform>
                                                    </Label.Margin>
                                                </Label>

                                            </Grid>

                                            <Grid
                                                Grid.Row="2"
                                                Margin="0,10,0,0"
                                                Padding="0"
                                                IsVisible="{Binding ShowCategory, Mode=TwoWay}"
                                                RowDefinitions="Auto,Auto">
                                                <Grid Grid.Row="0">
                                                    <!--  Earning  -->
                                                    <Label
                                                        FontFamily="Poppins Medium"
                                                        FontSize="{OnPlatform Android=14,
                                                                              iOS=16}"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="Earning : "
                                                        TextColor="{StaticResource Black}"
                                                        VerticalOptions="CenterAndExpand"
                                                        VerticalTextAlignment="Center">
                                                        <Label.Margin>
                                                            <OnPlatform x:TypeArguments="Thickness">
                                                                <On Platform="Android" Value="0" />
                                                                <On Platform="iOS" Value="0,10,0,0" />
                                                            </OnPlatform>
                                                        </Label.Margin>
                                                    </Label>

                                                    <!--  EarningAmount  -->
                                                    <Label
                                                        Grid.Column="1"
                                                        FontFamily="Poppins Medium"
                                                        FontSize="{OnPlatform Android=14,
                                                                              iOS=16}"
                                                        HorizontalOptions="StartAndExpand"
                                                        Text="{Binding EarningAmount, StringFormat='Rs {0}'}"
                                                        TextColor="{StaticResource Black}">
                                                        <Label.Margin>
                                                            <OnPlatform x:TypeArguments="Thickness">
                                                                <On Platform="Android" Value="0" />
                                                                <On Platform="iOS" Value="0,10,0,0" />
                                                            </OnPlatform>
                                                        </Label.Margin>
                                                    </Label>

                                                </Grid>

                                                <Grid Grid.Row="1">
                                                    <!--  InvoiceDate  -->
                                                    <Label
                                                        FontFamily="Poppins Medium"
                                                        FontSize="{OnPlatform Android=14,
                                                                              iOS=16}"
                                                        Text="{Binding InvoiceDate}"
                                                        TextColor="{StaticResource Black}">
                                                        <Label.Margin>
                                                            <OnPlatform x:TypeArguments="Thickness">
                                                                <On Platform="Android" Value="0" />
                                                                <On Platform="iOS" Value="0,10,0,10" />
                                                            </OnPlatform>
                                                        </Label.Margin>
                                                    </Label>

                                                </Grid>
                                            </Grid>

                                        </Grid>

                                        <!--#region Colum 1 ArrowImage-->
                                        <Image
                                            Grid.Column="1"
                                            Margin="0"
                                            Aspect="AspectFit"
                                            HeightRequest="25"
                                            HorizontalOptions="EndAndExpand"
                                            Source="{Binding ArrowImage, Mode=TwoWay}"
                                            VerticalOptions="{Binding Layout, Mode=TwoWay}"
                                            WidthRequest="25">
                                            <Image.GestureRecognizers>
                                                <TapGestureRecognizer NumberOfTapsRequired="1" Tapped="ImgExpand_Tapped" />
                                            </Image.GestureRecognizers>
                                        </Image>

                                    </Grid>

                                    <BoxView
                                        Grid.Row="1"
                                        BackgroundColor="{StaticResource Green}"
                                        HeightRequest="1"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="EndAndExpand" />
                                </Grid>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>